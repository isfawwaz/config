{
  "name": "personal-config",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/isfawwaz/config",
  "repository": {
    "type": "git",
    "url": "https://github.com/isfawwaz/config"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "prepare": "husky install",
    "publish-packages": "turbo run build lint test && multi-semantic-release",
    "publish-packages:dry": "turbo run build lint test && multi-semantic-release --dry-run"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@isfawwaz/eslint-config-base": "workspace:*",
    "@isfawwaz/eslint-config-jest": "workspace:*",
    "@isfawwaz/prettier-config": "workspace:*",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^7.23.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "multi-semantic-release": "^3.0.2",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.29.3",
  "lint-staged": {
    "*": [
      "prettier --ignore-unknown --write"
    ],
    "*.js": "turbo run lint -- --ignore-pattern **/test"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "master",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "ci": false
  }
}
